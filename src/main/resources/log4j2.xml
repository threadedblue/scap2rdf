<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}(%L) - %msg%n" />
		</Console>
		<File name="File" fileName="logs/scap2rdf.log" immediateFlush="false"
			append="false">
			<PatternLayout
				pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36}(%L) - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="iox.scap2rdf" level="DEBUG">
			<AppenderRef ref="Console" />
		</Logger>
        <Logger name="iox.emf2rdf" level="OFF" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="iox.sds4emf" level="OFF">
            <AppenderRef ref="Console" />
        </Logger>
		<Root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
